<li class="media">
  <div class="media-left">
    <%= link_to gravatar_for(major_notification.bet.user, size:50), major_notification.bet.user  %>  
  </div>
  <div class="media-body">
    Someone in your major just claimed he/she was <%= major_notification.bet.status %>
    <% if !major_notification.read? %>
      <span class="new label label-warning">new</span>
    <% end %>
    <span class="timestamp pull-right">
    	<%= time_ago_in_words(major_notification.created_at) %>
    </span>
  </div>
</li>