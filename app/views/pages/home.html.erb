<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
  	<aside class="col-md-4">
      <section class="user_info">
      	  <%= render 'shared/user_info' %>
      </section>
      <section class="bet_form" id="home_bet_form">
        <% if !current_user.majors.blank? %>
      	  <%= render "shared/bet_form" %>
        <% else %>
          <ul class="list-group">
          <li class="list-group-item list-group-item-danger">
            <strong>
              Warning:
            </strong>
          </li>
          <li class="list-group-item"><%= link_to "Please join a major first", majors_path %></li>
          </ul>
        <% end %>
      </section>
  	</aside>

  	<div class="col-md-5">
  	  <%= render 'shared/feed' %>
  	</div>

    <div class="col-md-3">
      <ul class="list-group">
        <li class="list-group-item list-group-item-warning">
          <strong>
            <span class="glyphicon glyphicon-heart"></span>
            Today's Winnings:
          </strong>
        </li>
        <% @winning_res.each do |res| %>
        <li class="list-group-item"><%= link_to Major.find(res[0]).name, major_path(res[0]) %> 
          <span class="badge"><%= res[1] %></span>
        </li>
        <% end %>
        <li class="list-group-item">
          <%= link_to "See More Major Info --->", majors_path  %>
        </li>
      </ul>     
    </div>
  </div>

<% else %>

  <h1>Suck My Major Home Page</h1>
  <p class="center">Think You Are Smart? You Don't Dare a Bet.</p>
<% end %>