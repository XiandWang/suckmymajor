<% provide(:title, "new comment") %> 

<h1>new comment</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@comment, url: bet_comments_path) do |f| %> 

		<%= f.label :body %>
		<%= f.text_area :body, rows: 3, class: 'form-control' %> 
		<br>
		<%= f.submit "Submit", class: "btn btn-primary" %>
	<% end %>
   </div>
</div>